layout: base.liquid
---

{% assign sorted_posts = collections.post | sort: 'data.date' | reverse %}
{% for post in sorted_posts %}
<div>
  <ul class="posts-list">
    <strong><a href="{{ post.url }}">{{ post.data.title }}</a></strong>
    <div>{{ post.data.date | date: '%b %d, %Y', 'utc' }}</div>
  </ul>
</div>
{% endfor %}
